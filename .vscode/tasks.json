{
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "tasks": [
    {
      "taskName": "build",
      "isBuildCommand": true,
      "showOutput": "always",
      "problemMatcher": "$tsc",
      "suppressTaskName": true,
      "args": [
        "run",
        "build"
      ]
    },
    {
      "taskName": "watch server",
      "isBuildCommand": false,
      "isBackground": true,
      "showOutput": "always",
      "problemMatcher": "$tsc",
      "suppressTaskName": true,
      "args": [
        "run",
        "watch-server"
      ]
    },
    {
      "taskName": "watch client",
      "isBuildCommand": false,
      "isBackground": true,
      "showOutput": "always",
      "problemMatcher": "$tsc",
      "suppressTaskName": true,
      "args": [
        "run",
        "watch-client"
      ]
    }
  ]
}