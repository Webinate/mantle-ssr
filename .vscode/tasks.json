{
  "version": "2.0.0",
  "type": "shell",
  "tasks": [
    {
      "label": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$tsc",
      "command": "npm run build"
    },
    {
      "label": "watch server",
      "isBackground": true,
      "problemMatcher": "$tsc",
      "command": "npm run watch-server"
    },
    {
      "label": "watch client",
      "isBackground": true,
      "problemMatcher": "$tsc",
      "command": "npm run watch-client"
    }
  ]
}